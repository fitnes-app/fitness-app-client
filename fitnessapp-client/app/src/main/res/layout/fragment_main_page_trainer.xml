<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fitnessapp.client.Fragments.MainPageTrainerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/layouts_top_margin"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:text="@string/notifications"
            android:textColor="@android:color/black" />

        <RelativeLayout
            android:layout_width="370dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="#DDDD">


            <ImageView
                android:id="@+id/image_chat"
                android:layout_width="89dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/user" />

            <TextView
                android:id="@+id/name_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@id/image_chat"
                android:text="User 1"
                android:textColor="#4a4a4a"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/content_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="end"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/image_chat"

                android:text="User 1 has just owned your services!"
                android:textColor="#000"
                android:textSize="16dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="55dp"
                android:layout_toRightOf="@id/image_chat"
                android:text="Reply" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="370dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="#DDDD">


            <ImageView
                android:id="@+id/image_chat2"
                android:layout_width="89dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/user" />

            <TextView
                android:id="@+id/name_chat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@id/image_chat2"
                android:text="User 2"
                android:textColor="#4a4a4a"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/content_chat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="end"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/image_chat2"
                android:text="Leg Exercises doubt"
                android:textColor="#000"
                android:textSize="16dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="55dp"
                android:layout_toRightOf="@id/image_chat2"
                android:text="Reply" />

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>